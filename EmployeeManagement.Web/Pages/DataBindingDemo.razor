<h1>Data Bind Demo </h1>

<h2>
    One Way Data Binding
</h2>
<div>
    <b>Name : @Name</b>
</div>
<div>
    <b>Gender  : @(Gendar == "Male" ? $"Mr. {Name}" : $"Miss. {Name}")</b>
</div>
<div>
    <b>Name : @Name</b> <input value="@Name" />
</div>

<h2>
    Two Way Data Binding
</h2>

@*<div>
        <b>Name : </b> <input value="@Name" @onchange="@Onchange_event" />
    </div>*@

<div>
    <b>Name : </b><input @bind="Name" />
</div>

<div>
    <b>Name : </b> <input @bind="Name" @bind:event="oninput" />
</div>

<div>
    <b>color : </b> <input @bind="@color" />
</div>
<div @bind-style="@color" @bind-style:event="onchange">
    <h3>text to view color </h3>
</div>

<div>
    <textarea style="width:500px" rows="5" @bind="@Description" @bind:event="oninput"></textarea>
</div>

@{
    string cssclass = Description.Count() > 50 ? "red" : "black";
}
<div style="color:@cssclass">
    <b> @Description.Count()/50 </b>
</div>

